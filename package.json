{
  "name": "masochist-experimental",
  "version": "0.0.1",
  "description": "Website infrastructure for overengineers",
  "main": "index.js",
  "author": "Greg Hurrell <greg@hurrell.net>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@jest/globals": "*",
    "@types/node": "*",
    "jest": "*",
    "jest-config": "*",
    "prettier": "*",
    "prettier-v2-for-jest-inline-snapshots": "npm:prettier@^2",
    "ts-jest": "*",
    "typescript": "*"
  },
  "scripts": {
    "build": "tsc --build",
    "build:clean": "tsc --build --clean",
    "build:dry": "tsc --build --dry",
    "build:force": "tsc --build --force",
    "build:watch": "tsc --build --watch",
    "format": "yarn run prettier --log-level warn --write '**/*.{graphql,js,json,md,mjs,ts,yml}'",
    "format:check": "yarn run prettier --log-level warn --check '**/*.{graphql,js,json,md,mjs,ts,yml}'",
    "lint": "support/lint.sh",
    "test": "jest"
  },
  "packageManager": "yarn@3.6.3"
}
