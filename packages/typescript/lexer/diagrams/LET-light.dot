digraph finite_state_machine {
  bgcolor = "transparent";
  rankdir = LR;
  ratio = 0.5625; // 16:9.

  // Invisible node from which to draw start transition to start state.
  node [style = invis]; -1;

  // Accept state.
  node [color = "black", fontcolor = "black", style = "", shape = doublecircle]; 3;

  // Catch-all (default) for remaining states.
  node [color = "black", fontcolor = "black", style = "", shape = circle, xlabel = ""];

  -1 -> 0 [color = "black", fontcolor = "black"];
  0 -> 1 [color = "black", fontcolor = "black", label = "l"];
  1 -> 2 [color = "black", fontcolor = "black", label = "e"];
  2 -> 3 [color = "black", fontcolor = "black", label = "t"];
}